@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        
        <form action="Home/List" method="post">
            <fieldset>
                <legend>Pessoas</legend>


                <div>
                    <label for="PessoaId">Código</label>
                </div>
                <div>
                    <input type="number" value="@ViewData["PessoaId"]" name="PessoaId" />
                </div>

                <div>
                    <label for="Nome">Nome</label>
                </div>
                <div>
                    <input type="text" value="@ViewData["Nome"]" name="Name" />
                </div>

                <div>
                    <label for="Email">Email</label>
                </div>
                <div>
                    <input type="email" value="@ViewData["Email"]" name="Email" />
                </div>


                <div>
                    <label for="Tipo">Tipo</label>
                </div>
                <div>
                    <input type="text" value="@ViewData["Tipo"]" name="Tipo" />
                </div>

                <p><input type="submit" value="Enviar" /> </p>
            </fieldset>

        </form>
    </div>
       
</div>